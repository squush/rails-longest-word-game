<h1> Longest Word </h1>

<div class="container">
  <% @letters.each do |letter| %>
    <div class="tile"><h2><%= letter %></h2></div>
  <% end %>
</div>


<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="What's your longest word?">
  <input type="submit" value="Submit Word!">
</form>
